<Window x:Class="VortexExcelAddIn.Views.AutoRefreshDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConfiguraÃ§Ã£o de Refresh AutomÃ¡tico"
        Width="550" Height="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Configurar AtualizaÃ§Ã£o AutomÃ¡tica"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#2C3E50"/>
            <TextBlock Text="Configure o intervalo e a planilha alvo para atualizaÃ§Ã£o automÃ¡tica de dados"
                       FontSize="12"
                       Foreground="#7F8C8D"
                       Margin="0,5,0,0"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Settings -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Intervalo -->
                <GroupBox Header="Intervalo de AtualizaÃ§Ã£o"
                          Margin="0,0,0,15"
                          BorderBrush="#BDC3C7"
                          BorderThickness="1">
                    <StackPanel Margin="10">
                        <TextBlock Text="Com que frequÃªncia os dados devem ser atualizados?"
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Text="{Binding IntervalMinutes, UpdateSourceTrigger=PropertyChanged}"
                                     Width="80"
                                     Padding="8,5"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"/>
                            <TextBlock Text="minutos (1-60)"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"
                                       FontSize="12"
                                       Foreground="#7F8C8D"/>
                        </StackPanel>
                        <TextBlock Text="âš  Intervalos muito curtos podem impactar a performance"
                                   FontSize="11"
                                   Foreground="#E67E22"
                                   FontStyle="Italic"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- Planilha Alvo -->
                <GroupBox Header="Planilha Alvo"
                          Margin="0,0,0,15"
                          BorderBrush="#BDC3C7"
                          BorderThickness="1">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Qual planilha deve ser atualizada?"
                                       VerticalAlignment="Center"
                                       TextWrapping="Wrap"/>
                            <Button Content="ðŸ”„"
                                    Command="{Binding RefreshSheetListCommand}"
                                    Margin="10,0,0,0"
                                    Padding="5"
                                    ToolTip="Atualizar lista de planilhas"
                                    FontSize="12"/>
                        </StackPanel>
                        <ComboBox ItemsSource="{Binding AvailableSheets}"
                                  SelectedItem="{Binding TargetSheetName}"
                                  Padding="8,5"
                                  FontSize="13"/>
                        <TextBlock Text="ðŸ’¡ OpÃ§Ãµes: 'Planilha Atual' atualiza a planilha ativa, 'Criar nova planilha' cria uma nova a cada atualizaÃ§Ã£o, ou selecione uma planilha especÃ­fica"
                                   FontSize="11"
                                   Foreground="#3498DB"
                                   FontStyle="Italic"
                                   Margin="0,8,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </GroupBox>

                <!-- ParÃ¢metros de Consulta -->
                <GroupBox Header="ParÃ¢metros de Consulta"
                          Margin="0,0,0,15"
                          BorderBrush="#BDC3C7"
                          BorderThickness="1">
                    <StackPanel Margin="10">
                        <TextBlock Text="Os filtros atuais do Painel de Consulta serÃ£o usados para auto-refresh:"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,10"
                                   FontWeight="Medium"/>
                        <Border Background="#ECF0F1"
                                Padding="10"
                                CornerRadius="3">
                            <StackPanel>
                                <TextBlock Text="â€¢ Filtros de Coletor, Gateway, Equipment e Tag"
                                           Foreground="#2C3E50"
                                           Margin="0,0,0,3"/>
                                <TextBlock Text="â€¢ Intervalo de datas (janela deslizante do tempo atual)"
                                           Foreground="#2C3E50"
                                           Margin="0,0,0,3"/>
                                <TextBlock Text="â€¢ Limite: 1000 registros (fixo)"
                                           Foreground="#2C3E50"
                                           Margin="0,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </GroupBox>

                <!-- Status -->
                <GroupBox Header="Status"
                          Margin="0,0,0,0"
                          BorderBrush="#BDC3C7"
                          BorderThickness="1">
                    <TextBlock Text="{Binding StatusMessage}"
                               Foreground="{Binding StatusColor}"
                               Margin="10"
                               TextWrapping="Wrap"
                               FontWeight="Medium"/>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- BotÃµes -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Iniciar Refresh"
                    Command="{Binding StartAutoRefreshCommand}"
                    Background="#27AE60"
                    Foreground="White"
                    Padding="20,10"
                    Margin="0,0,10,0"
                    MinWidth="150"
                    FontWeight="Bold"
                    FontSize="13"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="3"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#229954"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Parar Refresh"
                    Command="{Binding StopAutoRefreshCommand}"
                    Background="#E74C3C"
                    Foreground="White"
                    Padding="20,10"
                    Margin="0,0,10,0"
                    MinWidth="150"
                    FontWeight="Bold"
                    FontSize="13"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Visibility>
                    <Binding Path="IsActive">
                        <Binding.Converter>
                            <BooleanToVisibilityConverter/>
                        </Binding.Converter>
                    </Binding>
                </Button.Visibility>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="3"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C0392B"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Fechar"
                    Click="Cancel_Click"
                    Background="#95A5A6"
                    Foreground="White"
                    Padding="20,10"
                    MinWidth="100"
                    FontSize="13"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="3"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7F8C8D"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
