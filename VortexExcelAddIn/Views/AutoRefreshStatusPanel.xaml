<UserControl x:Class="VortexExcelAddIn.Views.AutoRefreshStatusPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:VortexExcelAddIn">

    <UserControl.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <!-- Painel de status compacto para incorporar no QueryPanel -->
    <Border BorderBrush="#4472C4"
            BorderThickness="2"
            CornerRadius="5"
            Background="#F0F4FF"
            Padding="12"
            Margin="0,10,0,10"
            Visibility="{Binding IsActive, Converter={StaticResource BoolToVisibilityConverter}}">

        <StackPanel>
            <!-- Header -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="ðŸ”„"
                           FontSize="18"
                           Margin="0,0,8,0"
                           VerticalAlignment="Center"/>
                <TextBlock Text="Refresh AutomÃ¡tico Ativo"
                           FontWeight="Bold"
                           FontSize="15"
                           Foreground="#4472C4"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Status Details Grid -->
            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Intervalo -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Intervalo:"
                           FontWeight="SemiBold"
                           Foreground="#2C3E50"/>
                <TextBlock Grid.Row="0" Grid.Column="2"
                           Foreground="#34495E">
                    <Run Text="{Binding IntervalMinutes, Mode=OneWay}"/>
                    <Run Text="minutos"/>
                </TextBlock>

                <!-- PrÃ³xima AtualizaÃ§Ã£o -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="PrÃ³xima:"
                           FontWeight="SemiBold"
                           Foreground="#2C3E50"/>
                <TextBlock Grid.Row="2" Grid.Column="2"
                           Text="{Binding NextRefreshTime, StringFormat='HH:mm:ss'}"
                           Foreground="#34495E"/>

                <!-- Ãšltima AtualizaÃ§Ã£o -->
                <TextBlock Grid.Row="4" Grid.Column="0"
                           Text="Ãšltima:"
                           FontWeight="SemiBold"
                           Foreground="#2C3E50"/>
                <StackPanel Grid.Row="4" Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="{Binding LastRefreshTime, StringFormat='HH:mm:ss'}"
                               Foreground="#34495E"/>
                    <TextBlock Margin="5,0,0,0" Foreground="#7F8C8D">
                        <Run Text="("/>
                        <Run Text="{Binding LastRecordCount, Mode=OneWay}"/>
                        <Run Text="registros)"/>
                    </TextBlock>
                </StackPanel>
            </Grid>

            <!-- Status Message -->
            <Border Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="3"
                    Padding="8"
                    Margin="0,0,0,10">
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{Binding StatusColor}"
                           FontSize="11"
                           TextWrapping="Wrap"/>
            </Border>

            <!-- Action Buttons -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="Atualizar Agora"
                        Command="{Binding RefreshNowCommand}"
                        Background="#3498DB"
                        Foreground="White"
                        Padding="8,5"
                        FontSize="11"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="3"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2E86C1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="2"
                        Content="Parar Refresh"
                        Command="{Binding StopAutoRefreshCommand}"
                        Background="#E74C3C"
                        Foreground="White"
                        Padding="8,5"
                        FontSize="11"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="3"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C0392B"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
