<UserControl x:Class="VortexExcelAddIn.Views.QueryPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:VortexExcelAddIn"
             xmlns:views="clr-namespace:VortexExcelAddIn.Views">

    <UserControl.Resources>
        <local:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <local:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>

        <!-- Estilo para ícone de informação -->
        <Style x:Key="InfoIconStyle" TargetType="TextBlock">
            <Setter Property="Text" Value="ⓘ"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#4472C4"/>
            <Setter Property="Cursor" Value="Help"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="15">
            <TextBlock Text="Consultar Dados Vortex" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

            <!-- Filtros -->
            <GroupBox Header="Filtros" Margin="0,0,0,15" Padding="10">
                <StackPanel>
                    <!-- Período -->
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Período:" FontWeight="Medium" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="De:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <DatePicker SelectedDate="{Binding StartDate}" Margin="0,0,10,0"/>
                            <TextBlock Text="Até:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <DatePicker SelectedDate="{Binding EndDate}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Coletor -->
                    <StackPanel Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Coletor:" FontWeight="Medium"/>
                            <TextBlock Style="{StaticResource InfoIconStyle}">
                                <TextBlock.ToolTip>
                                    <ToolTip Content="Digite os IDs separados por vírgula ou deixe vazio para todos"/>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                        <TextBox Text="{Binding ColetorIds, UpdateSourceTrigger=PropertyChanged}" Padding="8,6"/>
                    </StackPanel>

                    <!-- Gateway -->
                    <StackPanel Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Gateway:" FontWeight="Medium"/>
                            <TextBlock Style="{StaticResource InfoIconStyle}">
                                <TextBlock.ToolTip>
                                    <ToolTip Content="Digite os IDs separados por vírgula ou deixe vazio para todos"/>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                        <TextBox Text="{Binding GatewayIds, UpdateSourceTrigger=PropertyChanged}" Padding="8,6"/>
                    </StackPanel>

                    <!-- Equipamento -->
                    <StackPanel Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Equipamento:" FontWeight="Medium"/>
                            <TextBlock Style="{StaticResource InfoIconStyle}">
                                <TextBlock.ToolTip>
                                    <ToolTip Content="Digite os IDs separados por vírgula ou deixe vazio para todos"/>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                        <TextBox Text="{Binding EquipmentIds, UpdateSourceTrigger=PropertyChanged}" Padding="8,6"/>
                    </StackPanel>

                    <!-- Tag -->
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Tag:" FontWeight="Medium"/>
                            <TextBlock Style="{StaticResource InfoIconStyle}">
                                <TextBlock.ToolTip>
                                    <ToolTip Content="Digite os IDs separados por vírgula ou deixe vazio para todos"/>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                        <TextBox Text="{Binding TagIds, UpdateSourceTrigger=PropertyChanged}" Padding="8,6"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Botões -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <Button Content="Consultar"
                        Command="{Binding QueryCommand}"
                        Background="#4472C4"
                        Foreground="White"
                        Padding="12,6"
                        Margin="5"
                        IsEnabled="{Binding IsQuerying, Converter={StaticResource InverseBoolConverter}}"/>

                <Button Content="Exportar para Excel"
                        Command="{Binding ExportToSheetCommand}"
                        Background="#70AD47"
                        Foreground="White"
                        Padding="12,6"
                        Margin="5"/>
            </StackPanel>

            <!-- Preview dos Resultados -->
            <GroupBox Header="Preview dos Resultados (primeiros 100)"
                      Margin="0,0,0,15"
                      Padding="10"
                      Visibility="{Binding PreviewResults.Count, Converter={StaticResource CountToVisibilityConverter}}">
                <DataGrid ItemsSource="{Binding PreviewResults}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Height="200">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Data/Hora" Binding="{Binding Time}" Width="150"/>
                        <DataGridTextColumn Header="Coletor" Binding="{Binding ColetorId}" Width="100"/>
                        <DataGridTextColumn Header="Gateway" Binding="{Binding GatewayId}" Width="100"/>
                        <DataGridTextColumn Header="Equipamento" Binding="{Binding EquipmentId}" Width="120"/>
                        <DataGridTextColumn Header="Tag" Binding="{Binding TagId}" Width="100"/>
                        <DataGridTextColumn Header="Valor" Binding="{Binding Valor}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- Status -->
            <GroupBox Header="Status" Margin="0,0,0,0" Padding="10">
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{Binding StatusMessageColor}"
                           TextWrapping="Wrap"/>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
